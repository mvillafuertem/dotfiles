[pull]
	ff = only
	rebase = true
[merge]
	ff = false
    tool = intellij
[difftool "intellij"]
    cmd = /Applications/IntelliJ\\ IDEA.app/Contents/MacOS/idea diff $(cd $(dirname \"$LOCAL\") && pwd)/$(basename \"$LOCAL\") $(cd $(dirname \"$REMOTE\") && pwd)/$(basename \"$REMOTE\")
[mergetool "intellij"]
    cmd = $(osascript -e 'tell application "System Events" to POSIX path of (file of process "IntelliJ IDEA" as alias)')/Contents/MacOS/idea merge $(cd $(dirname \"$LOCAL\") && pwd)/$(basename \"$LOCAL\") $(cd $(dirname \"$REMOTE\") && pwd)/$(basename \"$REMOTE\") $(cd $(dirname \"$BASE\") && pwd)/$(basename \"$BASE\") $(cd $(dirname \"$MERGED\") && pwd)/$(basename \"$MERGED\")
    trustExitCode = true
[color]
	branch = auto
	diff = auto
	pager = true
	status = auto
	ui = auto
[color "branch"]
	current = green
	local = cyan
	remote = white
[color "decorate"]
	branch = green
	head = white
	remote = yellow
	stash = yellow
	tag = yellow
[color "diff"]
	context = 102
	frag = 080
	func = 176
	meta = 016
	new = 157 016
	old = 210 016
[color "interactive"]
	error = normal
	header = normal
	help = normal
	prompt = normal
[color "status"]
	added = 114
	branch = 016 068
	changed = 210
	header = 102
	nobranch = bold ul blink 209
	untracked = 221
[format]
	pretty = %C(045)%h%C(reset) %C(255)%s%C(reset) %C(auto)%D%C(reset) %C(190 dim)%an%C(reset) %C(046 dim)%ar%C(reset) %+b
