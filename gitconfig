	email = mivimur@hotmail.com
[core]
	excludesFile = ~/.gitignore
	editor = vi
[commit]
	template = ~/.gitmessage
[alias]
	alias = !git config -l | grep alias | cut -c 7-
	br = branch -a -v
	ca = commit --amend
	cane = commit --amend --no-edit
	ci = commit
	ck = checkout
	cl = clone
	conf = config --global --list
	dw = diff --word-diff=color
	dw-1 = diff --word-diff=color HEAD^
	dw-2 = diff --word-diff=color HEAD^^
	f = fetch
	ll = log --graph
	llf = log --graph --first-parent
	lld = log --graph --date-order
	llp = log --graph -p
	lls = log --graph --stat
	ph = push
	pl = pull --rebase
	ppl = git config --global alias.pl pull
	ra = remote add
	rev = merge --no-ff --no-commit
	rr = remote remove
	sl = stash list
	slp = stash list --word-diff=color -p
	sls = stash list --stat
	st = status
	tree = log --all --graph --decorate --oneline --simplify-by-decoration
	rh = reset --hard
	bcurrent = rev-parse --abbrev-ref HEAD
	dwc = diff --word-diff=color --color-words=.
	shr = show --pretty=raw
	brs = branch -a -v --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
[fetch]
	prune = true
[rerere]
	enabled = true
